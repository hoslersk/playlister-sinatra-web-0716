<h1>Create New</h1>

<form action="/songs" method="POST">

 <label>Artist Name:</label>
 <input type="text" name="artist[name]" id="Artist Name"><br>

 <label>Song Name:</label>
 <input type="text" name="song[name]" id="Name"><br>

 <label>Choose Existing Genres:</label>
<%Genre.all.each do |genre|%>
   <input type="checkbox" name="genre_ids[]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name%></input>
   <%end %>
<label>Or Create New Genre:</label>
<input type="text" name="genre[name]" id="Genre Name"><br>
<br><br>

<input type="submit" value="Create" id="Create">
</form>
